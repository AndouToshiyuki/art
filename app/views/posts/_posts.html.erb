<div class="card-deck">
  <% posts.each do |post| %>
  <div class="card mb-3 mt-3 ml-5 mr-4" style="min-width: 300px; max-width: 300px">
    <p>
    <strong></strong>
    <%= image_tag post.image.url if post.image? %>
    </p>
    <div class="card-body">
      <ul class="list-unstyled">
        <li class="media mb-3">
          <div class="media-body">
            <div>
              <p class="text-center"><%= link_to  post.user.name, user_path(post.user) %></p>
            </div>
            <div>
              <p><%= post.content %></p>
            </div>
            <span class="text-muted"><%= post.created_at %></span>
            <div class="btn-toolbar">
              <div class="btn-group mt-5">
                <%= render 'favorites/favorite_button', post: post %>
                <% if current_user == post.user %>
                  <%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除してもよろしいですか?" }, class: 'btn btn-danger' %>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <% end %>
</div>
<%= paginate posts %>