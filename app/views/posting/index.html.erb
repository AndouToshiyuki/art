<% if logged_in? %>
  <div class="mt-3">
    <%= form_with(model: @post, local: true) do |f| %>
      <div class="form-group">
        <%= f.text_area :content,value: '【タイトル】', class: 'form-control', rows: 5 %>
      </div>
      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
  <% else %>
  <%= render '/login' %>
<% end %>
