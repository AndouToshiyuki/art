<div class="row bg-white pt-5 pb-5">
  <aside class="col-4">
    <div class="image-field rounded-circle">
    <img src="<%=@user.image_name %>">
    </div>
  </aside>
  <div class="col-8">
    <h3 class="pt-5 flex-sm-fill text-black"><%= @user.name %></h3>
    <% if @user == current_user %>
    <%= link_to '編集', edit_user_path, class: "btn btn-info mt-5" %>
    <% end %>
 </div>
 </div>
<ul class="row nav nav-tabs nav-justified mb-2">
  <li class="col-3 nav-item bg-info"><a href="<%= user_path(@user) %>" class="nav-link text-white">投稿一覧</a></li>
  <li class="col-3 nav-item bg-info"><a href="#" class="nav-link text-white">Follow一覧</a></li>
  <li class="col-3 nav-item bg-info"><a href="#" class="nav-link text-white">Follower一覧</a></li>
  <li class="col-3 nav-item bg-info"><a href="#" class="nav-link text-white">いいね一覧</a></li>
</ul>
<%= render 'posts/posts', posts: @posts %>
